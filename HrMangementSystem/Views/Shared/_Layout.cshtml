<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HrManagementSystem</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Header.css" asp-append-version="true" />
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

</head>
<body>
    <!-- Header -->
    <div>
        @Html.Partial("_Header")
    </div>

    <!-- Sidebar Navigation -->
    <header>
        <nav class="dash-sidebar light-sidebar transparent-bg">
            <div class="navbar-wrapper">
                <div class="m-header main-logo">
                    <a href="@Url.Action("Index", "Home")" class="b-brand">
                        <img src="~/Images/logo.jpeg" alt="HRMGo" class="logo logo-lg" />
                    </a>
                </div>
                <div class="navbar-content">
                    <ul>
                        <li>
                            <a href="@Url.Action("Dashboard", "Home")"><i class="fas fa-home"></i> Dashboard</a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-users"></i> Staff <i class="fas fa-chevron-down"></i>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="@Url.Action("Index", "User")"><i class="fas fa-user"></i> User Management</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Employee")"><i class="fas fa-id-card"></i> Employee Profile</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Payroll")"><i class="fas fa-money-bill-wave"></i> Payroll</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Timesheet")"><i class="fas fa-clock"></i> Timesheet</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Performance")"><i class="fas fa-chart-line"></i> Performance</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Training")"><i class="fas fa-chalkboard-teacher"></i> Training</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Uncomment the Footer when needed -->
    @*
    <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2024 - HrManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer>
    *@

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
